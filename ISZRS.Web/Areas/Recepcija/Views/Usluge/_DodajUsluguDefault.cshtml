@model ISZRS.Web.Areas.Recepcija.Models.UslugaRezervacijaDodavanjeVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-action="NovaUslugaDefault" method="post" id="DefaultForma">

    <input name="rezId" value="@Model.Rezervacija.RezervacijaId" hidden="hidden" />
    <input name="uslugaId" value="@Model.Usluga.Id" hidden="hidden" />

    <div class="form-group">
        <label class="control-label"> Datum pocetka usluge</label>
        <input class="form-control" id="DefaultDatumPocetka" name="DatumPocetka" type="date" value="@Model.Rezervacija.DatumPocetkaRezerviranja.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label class="control-label">Datum Zavrsetka</label>
        <input class="form-control" id="DefaultDatumZavrsetka" name="DatumZavrsetka" type="date" value="@Model.Rezervacija.DatumZavrsetkaRezerviranja.ToString("yyyy-MM-dd")" />
    </div>

    @if (Model.Usluga.Cijena > 0)
    {
        <h4 class="animated fadeInUp" id="DefaultInfoDiv">Cijena po gostu: @Model.Usluga.Cijena KM</h4>
    }
    else
    {
        <h4 class="animated fadeInUp" id="DefaultInfoDiv">Besplatna usluga</h4>

    }

    <div class="form-group">
        <input type="submit" value="Snimi" class="btn btn-success" />
    </div>
</form>