@model ISZR.Web.Models.Gosti



<div class="modal fade" id="add-contact" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="addContactLabel">Unesite informacije o novom Gostu</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <form asp-action="_NoviGost" method="post" asp-controller="Gosti">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input name="IsValid" hidden="hidden" value="@ViewData.ModelState.IsValid.ToString()" />


                            <div class="form-group">
                                <label asp-for="Ime" class="control-label"></label>
                                <input asp-for="Ime" class="form-control" />
                                <span asp-validation-for="Ime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Prezime" class="control-label"></label>
                                <input asp-for="Prezime" class="form-control" />
                                <span asp-validation-for="Prezime" class="text-danger"></span>
                            </div>

                            <div class="form-group">

                                <label class="control-label"> Drzava</label>
                                <select name="Drzava" id="DrzavaSelect" asp-items="ViewBag.DrazavaID" class="form-control"></select>
                                <span asp-validation-for="Adresa" class="text-danger"></span>

                            </div>

                            
                            <div id="ExtraInfo" style="display:none">
                                <div class="form-group">
                                    <label asp-for="GradId" class="control-label">Grad:</label>
                                    <select asp-for="GradId" id="Gradovi" class="form-control" />
                                    <span asp-validation-for="GradId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Adresa" class="control-label"></label>
                                    <input asp-for="Adresa" class="form-control" />
                                    <span asp-validation-for="Adresa" class="text-danger"></span>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                <button type="button" class="btn btn-primary" data-save="modal"  id="SnimiButton">Snimi</button>
            </div>
        </div>
    </div>
</div>


