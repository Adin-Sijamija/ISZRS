@model ISZRS.Web.Areas.Recepcija.Models.JelaVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model != null)
{

    @foreach (var jelo in Model.Hrana)

    {
      
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img src="data:image;base64,@System.Convert.ToBase64String(jelo.Slika)" alt="Avatar" style="width:300px;height:300px;">
                </div>
                <div class="flip-card-back">
                    <h1>@jelo.Naziv</h1>
                    <p> @jelo.Opis</p>
                    <p>Cijena:@(jelo.Cijena) KM</p>
                    <form id="Jeloform" asp-action="DodajJelo" asp-controller="Narudjba" method="post" class="DodajJelo">
                        <input type="number" value="@Model.NarudzbaID" name="NarudzbaID" readonly="readonly" hidden="hidden" />
                        <input type="number" value="@jelo.Id" name="JeloID" readonly="readonly" hidden="hidden" />
                        <input type="number" min="1" value="1" name="Kolicina" placeholder="Kolicina..." style="width:30%; align-content:center" hidden="hidden" />
                        <input type="submit" class="btn btn-success" value="Dodaj" />
                    </form>
                </div>
            </div>
        </div>
       

    }
}

