@model IEnumerable< ISZR.Web.Models.DolasciNaPosao>
@{
    ViewData["Title"] = "Dolasci.";
    Layout = "~/Areas/Administracija/Views/Shared/_Layout.cshtml";

    var Zaposlenik = Context.Request.Query["KorisnickoIme"];

}

<h2>Dolasci na posao zaposlenika @Zaposlenik</h2>
<hr />
<a asp-action="Isplate" asp-route-KorisnickoIme="@Zaposlenik" class="btn btn-default" >Isplate</a>
<br />

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Datum Dolaska</th>
            <th>Broj sati</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DatumDolaska.ToShortDateString()</td>
                    <td>@item.BrojSati</td>
                </tr>
            }
        }
    </tbody>
</table>
