@model ISZRS.Data.Models.TipSobeNamjestaj

@{
    ViewData["Title"] = "Obriši";
    Layout = "~/Areas/Administracija/Views/Shared/_Layout.cshtml";

}

<h2>Obriši tip namještaja</h2>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TipSobe)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipSobe.Naziv)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TipNamjestaja)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipNamjestaja)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Kolicina)
        </dt>
